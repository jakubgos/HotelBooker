<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle.Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/state_list_selectable_rect_green">

    <LinearLayout
        style="@style/CardStyle.Home"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/CardStyle.Home"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:textAlignment="gravity">

            <RatingBar
                android:id="@+id/hotel_list_item_rate"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1" />

            <TextView
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Hotel Name"
                android:textColor="@color/md_black_1000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_view_hotel_icon"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/hotel"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/list_view_prgress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:paddingTop="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotelAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Hotel Address"
                    android:textAlignment="textEnd"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Room Name"
                    android:textAlignment="textEnd"
                    android:textColor="@color/md_black_1000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/content_spacing_horizontal"
                    android:text="Cena"
                    android:textColor="@color/md_green_800"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:text="Ocena:"
                        android:textAlignment="textEnd"
                        android:textColor="@color/md_green_900"
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/content_spacing_horizontal"
                        android:layout_weight="1"
                        android:text="4 / 5"
                        android:textColor="@color/md_green_900"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>